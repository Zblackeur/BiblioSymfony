{% extends 'base.html.twig' %}

{% block title %}Editeur index{% endblock %}

{% block body %}
    <h1>Editeur index</h1>

    <table class="table" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_Ed</th>
                <th>Pays_ed</th>
                <th>Adresse_ed</th>
                <th>Telephone_ed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editeur in editeurs %}
            <tr>
                <td>{{ editeur.id }}</td>
                <td>{{ editeur.NomEd }}</td>
                <td>{{ editeur.PaysEd }}</td>
                <td>{{ editeur.AdresseEd }}</td>
                <td>{{ editeur.TelephoneEd }}</td>
                <td>
                    <a href="{{ path('editeur_show', {'id': editeur.id}) }}">show</a>
                    <a href="{{ path('editeur_edit', {'id': editeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('editeur_new') }}">Create new</a>
{% endblock %}
