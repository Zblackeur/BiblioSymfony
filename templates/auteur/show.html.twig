{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>

    <table class="table" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom_au</th>
                <td>{{ auteur.PrenomAu }}</td>
            </tr>
            <tr>
                <th>Biographie_au</th>
                <td>{{ auteur.BiographieAu }}</td>
            </tr>
             <tr>
                <th>LIVRE</th>
                <td>
                <ul>
                {% for livre in auteur.livres %}
                    <li>{{ livre.Titre }}</li>
                    {% endfor %}
                </ul>
                 
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('auteur_index') }}">back to list</a>

    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">edit</a>

    {{ include('auteur/_delete_form.html.twig') }}
{% endblock %}
