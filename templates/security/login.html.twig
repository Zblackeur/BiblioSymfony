{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <h2 class="text-muted">CONNEXION</h2>
<form action="{{ path("security_login") }}" method="post">
    <div class="form-group">
        <input class="form-control" placeholder="AdresseEmail" required name="_username" type="text">
    </div>
    <div>
        <input class="form-control" placeholder="PASSWORD" required name="_password" type="password">
    </div>
    <div>
        <button class="btn btn-success"   type="submit">Connexion</button>
        <a href="{{ path('security_registration') }}"> <button type="button" class="btn btn-primary">S'inscrire</button> </a>
    </div>
</form>
{% endblock %}